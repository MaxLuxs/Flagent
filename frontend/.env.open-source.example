# Flagent Frontend - Open Source Edition Configuration

# ==================================================
# EDITION
# ==================================================
ENV_EDITION=open_source

# ==================================================
# API CONFIGURATION
# ==================================================
ENV_API_BASE_URL=http://localhost:18000
ENV_API_TIMEOUT=30000

# ==================================================
# DEBUG & LOGGING
# ==================================================
ENV_DEBUG_MODE=false
ENV_ERROR_TRACKING=false

# ==================================================
# LOCALIZATION
# ==================================================
ENV_DEFAULT_LANGUAGE=en

# ==================================================
# CORE FEATURES (Open Source)
# ==================================================
ENV_FEATURE_AUTH=true
# Set to false to disable login gate (open access)
ENV_FEATURE_REALTIME=true

# ==================================================
# OPEN SOURCE FEATURES (Always Available)
# ==================================================
# Metrics & Analytics
ENV_FEATURE_METRICS=true

# AI-Powered Smart Rollout
ENV_FEATURE_SMART_ROLLOUT=true

# Anomaly Detection
ENV_FEATURE_ANOMALY_DETECTION=true

# ==================================================
# ENTERPRISE FEATURES (Disabled in Open Source)
# ==================================================
# Note: These will be automatically disabled when ENV_EDITION=open_source
# ENV_FEATURE_MULTI_TENANCY=false
# ENV_FEATURE_SSO=false
# ENV_FEATURE_BILLING=false
# ENV_FEATURE_SLACK=false
# ENV_FEATURE_ADVANCED_ANALYTICS=false
# ENV_FEATURE_AUDIT_LOGS=false
# ENV_FEATURE_RBAC=false
